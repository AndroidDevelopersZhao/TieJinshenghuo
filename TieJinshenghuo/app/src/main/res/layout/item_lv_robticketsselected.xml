<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="1sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="车次" />

                <TextView
                    android:id="@+id/tv_robtickets_train_code"
                    android:layout_width="70sp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="XX546" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:text="历时时常：" />

                <TextView
                    android:id="@+id/tv_robtickets_run_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="18小时30分钟" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1cccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_robtickets_from_station_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="西安" />

                <TextView
                    android:id="@+id/tv_robtickets_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2016-01-09 18:00" />
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:background="#fcf4f4"
                android:layout_width="40sp"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="15sp"
                android:textColor="#fffefe"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text=">"/>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_robtickets_to_station_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="上海" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="到达时间待计算" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1cccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_robtickets_yz_price"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="￥258" />

                <TextView

                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="硬座" />

                <TextView
                    android:id="@+id/tv_robtickets_yz_num"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="100张" />


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#646262"/>
    </LinearLayout>
</LinearLayout>