<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:gravity="center_vertical"
        android:textColor="#514242"
        android:layout_marginTop="5sp"
        android:text="请选择充值金额：" />

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp">

        <RadioButton
            android:id="@+id/amount_10"
            android:layout_width="100sp"
            android:layout_height="35sp"
            android:layout_marginLeft="30sp"
            android:text="10元"
            android:textColor="#f91e06"

            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/amount_20"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="30sp"
            android:text="20元"
            android:textColor="#f91e06"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/amount_30"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="30sp"
            android:text="30元"
            android:textColor="#f91e06"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/amount_50"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="30sp"
            android:text="50元"
            android:textColor="#f91e06"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/amount_100"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="30sp"
            android:text="100元"
            android:textColor="#f91e06"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/amount_200"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="30sp"
            android:text="200元"
            android:textColor="#f91e06"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/amount_300"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="30sp"
            android:text="300元"
            android:textColor="#f91e06"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/amount_500"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="30sp"
            android:text="500元"
            android:textColor="#f91e06"
            android:textSize="20sp" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:gravity="center_vertical"
        android:textColor="#514242"
        android:layout_marginTop="5sp"
        android:text="请填写电话号码" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="5sp"
        android:hint="15221340931"
        android:maxLength="11"
        android:inputType="number"
        android:textSize="20sp" />

    <View
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#868384" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                  本次充值将从您的余额中扣除，余额不\n                  足请提前到个人中心充值金额，或联系\n                  客服QQ3648415"
            android:textColor="#ec110d" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#868384" />

    <Button
        android:enabled="false"
        android:id="@+id/btn_addamount"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:text="充值" />
</LinearLayout>