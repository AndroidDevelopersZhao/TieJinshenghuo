<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:background="#c7c5c3"
                android:gravity="center"
                android:text="账户余额"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#686366" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="25sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="用户：" />

                <TextView
                    android:id="@+id/tv_amount_username"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="15221340931" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#686366" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="25sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="余额：" />

                <TextView
                    android:id="@+id/tv_amount_amount"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#fc0808" />

                <TextView
                    android:layout_width="20sp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="元" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#686366" />

            <Button
                android:id="@+id/brn_amount_pay"
                android:layout_width="100sp"
                android:layout_height="45sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:text="充值" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="或者您可以通过如下方式进行加值：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="15sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="支付宝1(长按账号复制)："
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="wenyun.zhao@ic-pay.com"
                    android:textColor="#d7a3a3"
                    android:textIsSelectable="true"
                    android:textSize="17sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="支付宝2(长按账号复制)："
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="15221340931"
                    android:textColor="#d7a3a3"
                    android:textIsSelectable="true"
                    android:textSize="17sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_35" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="转账后五分钟内未到账请联系Q 3648415 "
                android:textColor="@color/colorAccent" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>