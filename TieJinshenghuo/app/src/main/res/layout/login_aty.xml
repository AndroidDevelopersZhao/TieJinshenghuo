<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbe2ea"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210sp"
        android:gravity="center">

        <ImageView
            android:layout_width="140sp"
            android:layout_height="140sp"
            android:src="@drawable/top" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:background="@drawable/login_input"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="85sp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:src="@drawable/login_email" />
        </LinearLayout>

        <EditText
            android:textSize="15sp"
            android:id="@+id/et_username"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="账号"
            android:textColorHint="#faf7f7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/login_input"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="85sp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:src="@drawable/login_block" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:hint="密码"
            android:textColorHint="#faf7f7" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal">
            <View
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <CheckBox
                android:id="@+id/cb"
                android:layout_width="0sp"
                android:textColor="#df2121"
                android:textStyle="bold"
                android:layout_height="45sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="记住密码"/>
        <TextView
            android:id="@+id/et_register"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:textColor="#1013c4"
            android:textStyle="bold"
            android:text="注册账号"
            android:gravity="center"
            android:layout_height="45sp" />
        <View
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/btn_signin"
        android:layout_width="125sp"
        android:layout_height="45sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:scaleType="fitXY"
        android:src="@drawable/login_signin" />

    <TextView
        android:id="@+id/tv_forgotpsw"
        android:layout_width="200sp"
        android:layout_height="45sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Forgot password"
        android:textColor="#f7feffff" />
</LinearLayout>