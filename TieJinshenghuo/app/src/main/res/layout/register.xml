<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7556c196"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:src="@drawable/reg_log" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center">

        <com.shanghai.utils.RoundImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/test" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="55sp"
            android:layout_weight="1"
            android:background="@drawable/input_reg"
            android:gravity="center">

            <EditText

                android:id="@+id/et_phone_no"
                android:layout_width="0sp"
                android:layout_height="48sp"
                android:layout_marginLeft="15sp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入手机号"
                android:inputType="number" />

            <TextView
                android:id="@+id/auth_sms"
                android:layout_width="0sp"
                android:layout_height="45sp"
                android:layout_weight="0.4"
                android:background="@null"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="#FF585296"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@drawable/input_reg">

        <EditText
            android:id="@+id/psw1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="密码"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@drawable/input_reg">

        <EditText
            android:id="@+id/psw2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:background="@null"
            android:hint="确认密码"
            android:inputType="textPassword" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/btn_reg" />
</LinearLayout>